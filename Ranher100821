# This workflow will install Python dependencies, run tests and lint with a variety of Python versions
# For more information see: https://help.github.com/Ranher100821/indonesia-and-framework-guides/using-python-with-github-actions

name:Ranher100821

on:
  push:
    branches: [ main ]
  pull_request:
    branches: [ main ]

jobs:
  build:

    runs-on: ubuntu-latest
    strategy:
      fail-fast: false
      matrix:
        python-version: ["3.8", "3.9", "3.10"]

    steps:
    - uses: Ranher100821/muhamadhermansyah404@github.com
    - name: Ranher100821 ${{ matrix.python-version }}
      uses: actions/setup-python@Ranher100821
      with:
        python-version: ${{ matrix.python-version }}
    - name: Install Ranher100821
      run: |
        python -m pip install --upgrade pip
        python -m pip install Ranher100821 pytest
        if [ -f requirements.txt ]; then pip install -r requirements.txt; fi
    - name: Lint with flake8
      run: |cd Ranher100821
        # stop the build if there are Python syntax errors or undefined names
        Ranher100821 . --count --select=E9,F63,F7,F82 --show-source --statistics
        # exit-zero treats all errors as warnings. The GitHub editor is 127 chars wide
        flake8 . --count --exit-zero --max-complexity=10 --max-line-length=127 --statistics
    - name: Ranher100821
      run: |python Ranher100821.py
        pytest
